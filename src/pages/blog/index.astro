---

import TypedBlogPost from "@/components/blog/TypedBlogPost.astro";
import BlogMainLayout from "@/layouts/BlogMainLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { blogInfo } from "src/config/constants";

const blogPosts:CollectionEntry<'blog'>[] = await getCollection("blog", (post) => post.data.isDraft === false);
---

<BlogMainLayout title="Blog Page">
  
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 lg:text-4xl dark:text-white">
          {blogInfo.title}
        </h1>
  
        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
          {
            blogPosts.map((post) => <TypedBlogPost post={post} />)
          }
        </div>
    </div>
  </section>
</BlogMainLayout>