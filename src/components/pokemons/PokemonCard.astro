---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const urlImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    "flex flex-col items-center",
    {
      border: !isBig,
    },
  ]}
>
  <img
    transition:name={`${name}-image`}
    src={urlImage}
    alt={name}
    class:list={[
      {
        "w-26 h-26": isBig,
        "w-16 h-16": !isBig,
      },
    ]}
  />
  <span
    class:list={[
      "capitalize font-bold text-yellow-500",
      {
        "text-3xl": isBig,
        "text-red-400": isBig,
      },
    ]}>{name}</span
  >
</a>
